{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,

    /* Debugging & DX */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type safety */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module resolution */
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Jest + Node types */
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}